@model CreateGalleryDto
@{
    ViewData["Title"] = "CreateGallery";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div style="background-color:white">
    <form method="post" asp-action="CreateGallery" asp-controller="AdminGallery">
        <div class="text-danger" asp-validation-summary="All"></div>
        <label>Resim Adı</label>
        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Resim Adını Giriniz">
        <br />
        <button class="btn btn-success mt-3" type="submit">Yeni Resim Ekle</button>
    </form>
</div>

