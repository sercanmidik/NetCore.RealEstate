@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div style="background-color:white">
    <form method="post" asp-action="UpdateCategory" asp-controller="AdminCategory">
        <div class="text-danger" asp-validation-summary="All"></div>
        <input type="hidden" asp-for="CategoryId" />
        <label>Kategori İsmi</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Kategori Adını Giriniz">
        <br />
        <label>Resim Adı</label>
        <input type="text" class="form-control" asp-for="Image" placeholder="Resim Adını Giriniz">
        <br />
        <div class="form-check form-switch">
            <input asp-for="Status" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" />
            <label class="form-check-label" for="flexSwitchCheckDefault">Durumu</label>
        </div>
        <button class="btn btn-success mt-3" type="submit">Güncell Yap</button>
    </form>
</div>

