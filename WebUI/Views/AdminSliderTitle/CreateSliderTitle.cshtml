@model CreateSliderTitleDto
@{
    ViewData["Title"] = "CreateSliderTitle";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div style="background-color:white">
    <form method="post" asp-action="CreateSliderTitle" asp-controller="AdminSliderTitle">
        <div class="text-danger" asp-validation-summary="All"></div>
        <label>Başlık</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Başlık Adını Giriniz">
        <br />
        <label>İçerik</label>
        <input type="text" class="form-control" asp-for="Content" placeholder="İçerik Adını Giriniz">
        <br />
        <label>Resim Adı</label>
        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Resim Adını Giriniz">
        <br />
        <button class="btn btn-success mt-3" type="submit">Kayıt Yap</button>
    </form>
</div>

