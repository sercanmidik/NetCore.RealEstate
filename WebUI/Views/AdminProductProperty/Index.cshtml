@model List<ProductProperty>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="table-responsive" style="background-color:white">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Adı</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td><a class="btn btn-warning" href="/AdminProductProperty/UpdateProductProperty/@item.ProductProperyId">Güncelle</a></td>
                    <td><a class="btn btn-danger" href="/AdminProductProperty/DeleteProductProperty/@item.ProductProperyId">Sil</a></td>
                </tr>
            }

        </tbody>
    </table>
    <a class="btn btn-success" href="/AdminProductProperty/CreateProductProperty/">Yeni Marka</a>
</div>

